# ViralClip Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# GOOGLE GEMINI (Viral Moment Detection)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# AWS S3 (Cloud Backup)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name_here

# =============================================================================
# ELEVENLABS (Voice Dubbing)
# =============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# =============================================================================
# SOCIAL MEDIA APIs
# =============================================================================
# Instagram (Meta Graph API)
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_business_id_here

# YouTube (Google OAuth)
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# =============================================================================
# PROCESSING SETTINGS
# =============================================================================
# Whisper model: tiny, base, small, medium, large
WHISPER_MODEL=base
# Minimum clip duration in seconds
MIN_CLIP_DURATION=45
# Maximum clip duration in seconds
MAX_CLIP_DURATION=60
# Number of viral moments to detect (3-15)
VIRAL_MOMENTS_COUNT=5
# Max upload size in MB
MAX_UPLOAD_SIZE_MB=1024

# Queue controls
JOB_WORKER_CONCURRENCY=1
MAX_PENDING_JOBS=10

# =============================================================================
# SECURITY
# =============================================================================
# Optional API key required for /api and /ws routes when set
API_KEY=
# Comma-separated origins allowed by CORS
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Social posting is beta-gated by default
ENABLE_BETA_SOCIAL_POSTING=false
